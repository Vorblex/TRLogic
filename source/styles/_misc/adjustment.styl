html
    +hd()
        font-size 16px

    +laptop() 
        font-size 15px

    +tablet() 
        font-size 14px

    +phone()
        font-size 12px


body,
html 
    width 100%
    height 100%


body 
    position relative
    display flex
    flex-direction column
    margin 0
    background #fff
    line-height 1.6
    -webkit-font-smoothing antialiased


.maincontent
    position relative
    display flex
    flex 1 0 auto

.maincontent__container
    flex-direction column
    width 100%
    background $gray


.container
    position relative
    display flex
    max-width $containerMaxWidth
    min-width $containerMinWidth
    overflow hidden
    margin 0 auto


h1,
h2,
h3,
h4,
h5,
h6 
    margin-top 0
    margin-bottom 0
    font-weight normal


ul 
    margin 0
    padding 0


li 
    list-style none


p 
    margin 0


a
    text-decoration none


* 
    box-sizing border-box
